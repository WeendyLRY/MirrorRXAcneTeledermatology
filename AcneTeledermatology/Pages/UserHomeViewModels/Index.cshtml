    <p>Option 2: <a class="nav-link text-dark" asp-area="" asp-page="/UserAssessments/Index" asp-route-AutomaticCreate="true" asp-route-uid="@User.FindFirstValue(ClaimTypes.NameIdentifier)" asp-route-isDerm="false">Acne Severity Assessment</a>.</p>
    <p>Option 3: <a class="nav-link text-dark" asp-area="" asp-page="/UserDermRequests/Index" asp-route-uid="@User.FindFirstValue(ClaimTypes.NameIdentifier)" asp-route-isDerm="false">Request a derm</a>.</p> *@


    <div class="form-group">
        <div class="row">
            <div class="col-md-6">
                <div class="custom-button supplemental-acne-profile">
                    <p>
                        <a asp-area="" asp-page="/UserSupplementalAcneProfiles/Index"
                           id="supplemental-acne-profile-link"
                           asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">
                            <span>Update Patient Acne Profile</span>
                        </a>
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="custom-button acne-severity-assessment">
                    <p>
                        <a asp-area="" asp-page="/UserAssessments/Index"
                           asp-route-uid="@User.FindFirstValue(ClaimTypes.NameIdentifier)"
                           asp-route-AutomaticCreate="true" 
