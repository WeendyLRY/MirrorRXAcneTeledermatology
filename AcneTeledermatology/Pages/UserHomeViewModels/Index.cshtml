@model AcneTeledermatology.Pages.UserHomeViewModels.IndexModel
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@{
}

@{
    ViewData["Title"] = "Create";
    Layout = "_PatientLayout";

}


<style>


    /* Text on top of the image and overlay */
    .custom-button a {
        color: white;
        font-size: 24px;
        font-weight: bold;
        font-family: "Arial", sans-serif;
        text-align: center;
        text-decoration: none;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2; /* Ensure text is on top of the overlays */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Add a shadow to the text */
    }

    /* Base styles for the custom buttons */
    .custom-button {
        display: inline-block;
        width: 250px; /* Set a fixed width for the button */
        height: 250px; /* Set a fixed height for the button */
        background-image: url('Acne-Blog-Header.jpg');
        background-size: cover;
        background-position: center;
        position: relative;
    }

        /* Translucent black overlay */
        .custom-button::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Translucent black layer */
        }

        /* Hover effect: Opaque gray overlay on hover */
        .custom-button:hover::before {
            background-color: rgba(128, 128, 128, 0.7); /* Opaque gray layer on hover */
        }

        /* Text on top of the image and overlay */
        .custom-button span {
            position: relative;
            z-index: 1; /* Ensure text is on top of the overlays */
            color: white; /* Text in white */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Add a shadow to the text */
        }

        /* Adjust background image properties */
        .custom-button img {
            position: relative;
            z-index: 1; /* Ensure image is on top of the overlays */
        }

    .supplemental-acne-profile {
        background-image: url('/uploads/img/supplemental-acne-profile.jpg');
        background-size: cover;
        background-position: center;
    }

    /* Additional styles for the dermatologist login button */
    .request-derm {
        background-image: url('/uploads/img/request-derm.jpg');
        background-size: cover;
        background-position: center;
    }

    .acne-severity-assessment {
        background-image: url('/uploads/img/acne-severity-assessment.jpeg');
        background-size: cover;
        background-position: center;
    }

    .view-current-consultations {
        background-image: url('/uploads/img/view-current-consultations.png');
        background-size: cover;
        background-position: center;
    }


</style>

<div class="text-center" style="padding-bottom: 200px">
    <h1 class="display-4">Mirror RX</h1>
