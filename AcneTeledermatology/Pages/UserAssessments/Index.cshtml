@page
@model AcneTeledermatology.Pages.UserAssessments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Start your acne assessment with just a simple image upload!</h1>

<table class="table">
    <thead>
        <tr>
     
            <th>
                @Html.DisplayNameFor(model => model.UserAssessment[0].DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAssessment[0].Score)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserAssessment) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score_In_text)
            </td>

            
            <td>
                
                <a asp-page="./Details" asp-route-id="@item.IDUserAssessment">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.IDUserAssessment">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



<div>
    <a asp-page="/UserAssessments/Create" asp-route-AutomaticCreate="true">Start Assessment</a>

</div>
