@page
@model AcneTeledermatology.Pages.UserAssessments.AcneScoreChartModel

@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
}

<h1>Acne Score Chart</h1>

<canvas id="acneScoreChart" width="400" height="200"></canvas>

<canvas id="lineChart" width="400" height="200"></canvas>
<script>
    var dateLabels = @Html.Raw(Json.Serialize(Model.DateLabelsJson));
    var acneScores = @Html.Raw(Json.Serialize(Model.AcneScoresJson));

    var ctx = document.getElementById("lineChart").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: dateLabels,
            datasets: [{
                label: 'Acne Score',
                data: acneScores,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        },
        options: {
            scales: {
                x: {
                    type: 'time',
                    time: {
                        unit: 'day'
                    }
                }
            }
        }
    });
</script>

