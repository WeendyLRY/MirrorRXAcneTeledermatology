@page
@model AcneTeledermatology.Pages.UserDermRequestResponses.RespondToPatientConsultationFeedbackModel

@{
    ViewData["Title"] = "Update";
}

<h1>Create</h1>

<h4>UserDermRequestResponse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="UserDermRequestResponse.IDDermProfile" class="form-control" />

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="UserDermRequestResponse.IDUserDermRequest" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="UserDermRequestResponse.DermComment" class="control-label"></label>
                <input asp-for="UserDermRequestResponse.DermComment" class="form-control" />
                <span asp-validation-for="UserDermRequestResponse.DermComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDermRequestResponse.DermPrescription" class="control-label"></label>
                <input asp-for="UserDermRequestResponse.DermPrescription" class="form-control" />
                <span asp-validation-for="UserDermRequestResponse.DermPrescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDermRequestResponse.DermSuggestion" class="control-label"></label>
                <input asp-for="UserDermRequestResponse.DermSuggestion" class="form-control" />
                <span asp-validation-for="UserDermRequestResponse.DermSuggestion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserDermRequestResponse.IsVirtualConsultationPossible" class="control-label">
                    Tick if virtual consultation is possible for future feedbacks
                </label>
                <div class="form-check">
                    <input asp-for="UserDermRequestResponse.IsVirtualConsultationPossible" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="UserDermRequestResponse.IsVirtualConsultationPossible" class="text-danger"></span>
                </div>
            </div>


            @if (Model.ShowField)
            {
                <div class="form-group">
                    <label asp-for="UserDermRequestResponse.IsCaseClosed" class="control-label">
                        Tick if case closed
                    </label>
                    <div class="form-check">
                        <input asp-for="UserDermRequestResponse.IsCaseClosed" class="form-check-input" type="checkbox" />
                        <span asp-validation-for="UserDermRequestResponse.IsCaseClosed" class="text-danger"></span>
                    </div>
                </div>
            }


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
